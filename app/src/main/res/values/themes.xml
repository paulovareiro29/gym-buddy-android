<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/primaryLightColor</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/secondaryLightColor</item>

        <!-- Background color -->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:colorBackground">@color/background</item>

        <!-- Status bar and navigation bar colors -->
        <item name="android:statusBarColor">@color/primaryDarkColor</item>
        <item name="android:navigationBarColor">@color/black</item>

        <!-- Accent color -->
        <item name="colorAccent">@color/accentColor</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>

        <!-- Error colors -->
        <item name="colorError">@color/error</item>

        <!-- Surface color -->
        <item name="colorSurface">@color/surface</item>

        <!-- Other default settings -->
        <item name="android:textSize">14sp</item>
        <item name="android:textViewStyle">@style/Theme.Typography.Body</item>
        <item name="textInputStyle">@style/Theme.Input</item>
    </style>

    <!-- No ActionBar theme. -->
    <style name="Theme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Buttons -->
    <style name="Theme.GymBuddy.Button" parent="Widget.Material3.Button.TextButton">
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="rippleColor">@color/whiteRipple</item>

        <item name="textAllCaps">true</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.SmallComponent</item>

        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.GymBuddy.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>

        <item name="textAllCaps">true</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.SmallComponent</item>

        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.Button.Primary" parent="Theme.GymBuddy.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primaryColor</item>
    </style>

    <style name="Theme.Button.Secondary" parent="Theme.GymBuddy.Button.Outlined" />

    <style name="Theme.Button.Accent" parent="Theme.GymBuddy.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/accentColor</item>
    </style>

    <style name="Theme.Button.Danger" parent="Theme.GymBuddy.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/error</item>
    </style>

    <style name="Theme.Button.Danger.Outlined" parent="Theme.GymBuddy.Button.Outlined">
        <item name="android:textColor">@color/error</item>
        <item name="strokeColor">@color/error</item>
        <item name="backgroundTint">@color/white</item>
        <item name="rippleColor">@color/errorRipple</item>
    </style>

    <!-- Inputs -->
    <style name="Theme.Input" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
    </style>


    <!-- Typography -->
    <style name="Theme.GymBuddy.Typography" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="Theme.GymBuddy.Typography.Medium" parent="Theme.GymBuddy.Typography">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Theme.GymBuddy.Typography.Black" parent="Theme.GymBuddy.Typography">
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <!-- Typography: Display-->
    <style name="Theme.Typography.DisplayLarge" parent="Theme.GymBuddy.Typography.Black">
        <item name="android:textSize">57sp</item>
    </style>

    <style name="Theme.Typography.Display" parent="Theme.GymBuddy.Typography.Black">
        <item name="android:textSize">45sp</item>
    </style>

    <style name="Theme.Typography.DisplaySmall" parent="Theme.GymBuddy.Typography.Black">
        <item name="android:textSize">36sp</item>
    </style>

    <!-- Typography: Headline -->
    <style name="Theme.Typography.HeadlineLarge" parent="Theme.GymBuddy.Typography">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Theme.Typography.Headline" parent="Theme.GymBuddy.Typography">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="Theme.Typography.HeadlineSmall" parent="Theme.GymBuddy.Typography">
        <item name="android:textSize">24sp</item>
    </style>

    <!-- Typography: Title -->
    <style name="Theme.Typography.TitleLarge" parent="Theme.GymBuddy.Typography">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Theme.Typography.Title" parent="Theme.GymBuddy.Typography.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.Typography.TitleSmall" parent="Theme.GymBuddy.Typography.Medium">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Typography: Label -->
    <style name="Theme.Typography.LabelLarge" parent="Theme.GymBuddy.Typography.Medium">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.Typography.Label" parent="Theme.GymBuddy.Typography.Medium">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.Typography.LabelSmall" parent="Theme.GymBuddy.Typography.Medium">
        <item name="android:textSize">11sp</item>
    </style>

    <!-- Typography: Body -->
    <style name="Theme.Typography.BodyLarge" parent="Theme.GymBuddy.Typography">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.Typography.Body" parent="Theme.GymBuddy.Typography">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.Typography.BodySmall" parent="Theme.GymBuddy.Typography">
        <item name="android:textSize">12sp</item>
    </style>
</resources>
